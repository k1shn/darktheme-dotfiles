watch_stylesheet: true
watch_config: true
debug: true

komorebi:
  start_command: "komorebic start --whkd"
  stop_command: "komorebic stop"
  reload_command: "komorebic stop && komorebic start --whkd"

bars:
  status-bar:
    enabled: true
    screens: ["*"]
    class_name: "yasb-bar"
    alignment:
      position: "top"
      center: true
    animation:
      enabled: true
      duration: 1000
    blur_effect:
      enabled: true
      acrylic: false
      dark_mode: false
      round_corners: false
      round_corners_type: "normal"
      border_color: "System"
    window_flags:
      always_on_top: false
      windows_app_bar: true
    dimensions:
      width: "100%"
      height: 32
    padding:
      top: 0
      left: 0
      bottom: 0
      right: 0
    widgets:
      left:
        [
          "home",
          "spare",
          "user",
          "spare",
          "komorebi_workspaces",
          "spare",
          "active_window",
          "notifications",
        ]
      center:
        [
          "clock",
          "media",
          "cava",
        ]
      right:
        [
          "wifi",
          "cpu",
          "ram_usage",
          "disk_usage",
          "spare",
          "volume",
          "battery",
          "spare",
          "power_menu"
        ]
widgets:
  komorebi_workspaces:
    type: "komorebi.workspaces.WorkspaceWidget"
    options:
      label_offline: "Komorebi Offline"
      label_workspace_btn: "{index}"
      label_workspace_active_btn: "{index}"
      label_workspace_populated_btn: "{index}"
      label_default_name: "{index}"
      label_zero_index: false
      hide_empty_workspaces: true
      hide_if_offline: false
      animation: true
      container_padding:
        top: 5
        left: 0
        bottom: 4
        right: 0
  komorebi_active_layout:
    type: "komorebi.active_layout.ActiveLayoutWidget"
    options:
      hide_if_offline: true
      label: "<span>\uf476</span> {count}"
      layouts:
        [
          "bsp",
          "columns",
          "rows",
          "grid",
          "vertical_stack",
          "horizontal_stack",
          "ultrawide_vertical_stack",
          "right_main_vertical_stack",
        ]
      layout_icons:
        bsp: "BSP"
        columns: "COLS"
        rows: "ROWS"
        grid: "GRID"
        vertical_stack: "V-STACK"
        horizontal_stack: "H-STACK"
        ultrawide_vertical_stack: "W-STACK"
        right_main_vertical_stack: "RMV-STACK"
        monocle: "MONOCLE"
        maximised: "MAX"
        floating: "FLOATING"
        paused: "PAUSED"
      container_padding:
        top: 0
        left: 8
        bottom: 0
        right: 8
      callbacks:
        on_left: "next_layout"
        on_middle: "toggle_monocle"
        on_right: "prev_layout"
  notifications:
    type: "yasb.notifications.NotificationsWidget"
    options:
      label: "\uf0f3 {count}"
      label_alt: "{count} notifications"
      hide_empty: true
      tooltip: false
      callbacks:
        on_left: "toggle_notification"
        on_right: "do_nothing"
        on_middle: "toggle_label"
      container_padding:
        top: 0
        left: 6
        bottom: 0
        right: 6
  wallpaper:
    type: "yasb.wallpapers.WallpapersWidget"
    options:
      label: "<span>\uf03e</span>"
      image_path: "C:\\Users\\kishan-rc\\mnt\\wallpaper"
      change_automatically: false # Automatically change wallpaper
      update_interval: 60
      gallery:
        enabled: true
        blur: true
        image_width: 220
        image_per_page: 8
        show_buttons: false
        orientation: "portrait"
        image_spacing: 8
        lazy_load: true
        lazy_load_delay: 80
        lazy_load_fadein: 400
        image_corner_radius: 20
        enable_cache: true

  cava:
    type: "yasb.cava.CavaWidget"
    options:
      bar_height: 14
      gradient: 0
      reverse: 1
      foreground: "#ffffff"
      gradient_color_1: '#ffffff'
      gradient_color_2: '#ffffff'
      bars_number: 12
      bar_spacing: 1
      bar_width: 2
      noise_reduction: 0.25
      sleep_timer: 2
      hide_empty: true
      container_padding:
        top: 2
        left: 4
        bottom: 0
        right: 4
  user:
    type: "yasb.custom.CustomWidget"
    options:
      label: "{data}"  # pake icon FontAwesome biar stylish, ganti kalo mau
      label_alt: "{data}"
      class_name: "system-widget"
      callbacks:
        on_left: "do_nothing"
        on_middle: "do_nothing"
        on_right: "do_nothing"
      exec_options:
        run_cmd: "powershell -NoProfile -Command [System.Environment]::UserName"
        run_interval: 10000  # update tiap 10 detik
        return_format: "string"
        hide_empty: false
  spare:
    type: "yasb.custom.CustomWidget"
    options:
      label: "|"
      label_alt: "|"
      class_name: "system-widget"
      callbacks:
        on_left: "do_nothing"
        on_middle: "do_nothing"
        on_right: "do_nothing"
  disk_usage:
    type: "yasb.custom.CustomWidget"
    options:
      label: "\uf0a0   {data}"
      label_alt: "{data}"
      class_name: "system-widget"
      callbacks:
        on_left: "do_nothing"
        on_middle: "do_nothing"
        on_right: "do_nothing"
      exec_options:
        run_cmd: "powershell -NoProfile -ExecutionPolicy Bypass -WindowStyle Hidden -File $env:USERPROFILE\\widgetcustom\\diskusage.ps1"
        run_interval: 60000
        return_format: "string"
        hide_empty: false
  ram_usage:
    type: "yasb.custom.CustomWidget"
    options:
      label: "   {data}"
      label_alt: "{data}"
      class_name: "system-widget"
      callbacks:
        on_left: "do_nothing"
        on_middle: "do_nothing"
        on_right: "do_nothing"
      exec_options:
        run_cmd: "powershell -NoProfile -ExecutionPolicy Bypass -WindowStyle Hidden -File $env:USERPROFILE\\widgetcustom\\ramusage.ps1"
        run_interval: 60000
        return_format: "string"
        hide_empty: false
  wi_usage:
    type: "yasb.custom.CustomWidget"
    options:
      label: "   {data}"
      label_alt: "{data}"
      class_name: "system-widget"
      exec_options:
        run_cmd: "powershell -NoProfile -ExecutionPolicy Bypass -WindowStyle Hidden -File $env:USERPROFILE\\widgetcustom\\wifi.ps1"
        run_interval: 60000
        return_format: "string"
        hide_empty: false
  cpu:
   type: "yasb.cpu.CpuWidget"
   options:
    label: "\uf2db   {info[percent][total]}%"
    label_alt: "\uf2db   {info[histograms][cpu_percent]}"
    callbacks:
        on_left: "do_nothing"
        on_middle: "do_nothing"
        on_right: "do_nothing"
    update_interval: 2000
    histogram_icons:
      - '\u2581' # 0%
      - '\u2581' # 10%
      - '\u2582' # 20%
      - '\u2583' # 30%
      - '\u2584' # 40%
      - '\u2585' # 50%
      - '\u2586' # 60%
      - '\u2587' # 70%
      - '\u2588' # 80%+
    histogram_num_columns: 8
  wifi:
    type: "yasb.wifi.WifiWidget"
    options:
      label: "{wifi_icon}   {wifi_name}"
      label_alt: "{wifi_name}   {wifi_strength}%"
      update_interval: 5000
      callbacks:
        on_left: "exec cmd.exe /c start ms-settings:network"
        on_middle: "do_nothing"
        on_right: "do_nothing"
      ethernet_label: "{wifi_icon}"
      ethernet_label_alt: "{wifi_icon}   {ip_addr}"
      ethernet_icon: "\uf6ff"
      wifi_icons: [
        "\uf6aa",  # Icon for 0% strength
        "\uf6ab",  # Icon for 1-24% strength
        "\uf6ab",  # Icon for 25-49% strength
        "\uf1eb",  # Icon for 50-74% strength
        "\uf1eb"   # Icon for 75-100% strength
      ]
  home:
    type: "yasb.home.HomeWidget"
    options:
      label: ""
      menu_list:
        - { title: "Home", path: "~" }
        - { title: "Downloads", path: "C:\\Users\\elrond\\Downloads"}
        - { title: "Documents", path: "C:\\Users\\elrond\\Documents"}
        - { title: "Pictures", path: "C:\\Users\\elrond\\Pictures"}
        - { title: "Videos", path: "C:\\Users\\elrond\\Videos"}
      system_menu: true
      power_menu: true
      blur: true
      round_corners: true
      round_corners_type: "normal"
      border_color: ""
      distance: 10
      container_padding:
        top: 0
        left: 0
        bottom: 0
        right: 0
  media:
    type: "yasb.media.MediaWidget"
    options:
      label: "<span>\udb80\udf87</span> {title}"
      label_alt: "<span>\udb80\udf87</span> {artist}"
      hide_empty: true
      max_field_size:
        label: 50
        label_alt: 50
      callbacks:
        on_left: "toggle_media_menu"
        on_middle: "do_nothing"
        on_right: "toggle_label"
      show_thumbnail: false
      thumbnail_edge_fade: true
      controls_only: false
      controls_left: false
      thumbnail_alpha: 50
      thumbnail_padding: 0
      thumbnail_corner_radius: 8
      media_menu:
        blur: true
        round_corners: true
        round_corners_type: "normal"
        border_color: "system"
        alignment: "center"
        direction: "down"
        offset_left: -40
        offset_top: 6
        thumbnail_corner_radius: 8
        thumbnail_size: 120
        max_title_size: 80
        max_artist_size: 20
        show_source: true
      media_menu_icons:
        prev_track: "\uf048"
        next_track: "\uf051"
        play: "\uf04b"
        pause: "\uf04c"
  clock:
    type: "yasb.clock.ClockWidget"
    options:
      label: "{%I:%M %p}"
      label_alt: "{%a, %d %b %H:%M:%S}"
      timezones: [] #Looking up time zone info from registry
      calendar: 
        blur: true
        round_corners: True
        round_corners_type: "normal"
        border_color: "System"
        alignment: "center"
        direction: "down"
  weather:
    type: "yasb.weather.WeatherWidget"
    options:
      label: "<span>{icon}</span> {temp}"
      label_alt: "{location}: {conditions}, Min {min_temp}, Max {max_temp}, Humidity {humidity}"
      api_key: '3bf4cf9a7c3f40d6b31174128242807'
      update_interval: 600
      hide_decimal: true
      location: "Hillsboro, Oregon"
      units: "imperial"
      callbacks:
        on_left: "toggle_card"
      icons:
        sunnyDay: "\udb81\udd99"
        clearNight: "\ue3c2"
        cloudyDay: "\ue21d"
        cloudyNight: "\ue226"
        rainyDay: "\ue371"
        rainyNight: "\ue371"
        snowyIcyDay: "\udb81\udf17"
        snowyIcyNight: "\udb81\udf17"
        blizzardDay: "\udb81\udd99"
        default: "\udb81\udd99"
      weather_card:
        blur: True
        round_corners: True
        round_corners_type: "normal"
        border_color: "#45475a"
        alignment: "right"
        direction: "down"
        distance: 6
        icon_size: 48
  volume:
    type: "yasb.volume.VolumeWidget"
    options:
      label: "{icon}   {level}"
      label_alt: "{volume}"
      volume_icons:
        - "\ueee8" 
        - "\uf026"
        - "\uf027" 
        - "\uf027"  
        - "\uf028"
      audio_menu:
        blur: True
        round_corners: True
        round_corners_type: 'normal'
        border_color: '#45475a'
        alignment: 'right'
        direction: 'down'
        distance: 6
      callbacks:
        on_left: "toggle_volume_menu"
        on_right: "exec cmd.exe /c start ms-settings:sound"
  power_menu:
    type: "yasb.power_menu.PowerMenuWidget"
    options:
      label: ""
      uptime: true
      blur: false
      blur_background: True
      animation_duration: 200
      button_row: 5
      buttons:
        shutdown: ["  ", "Shut Down"]
        restart: ["\uead2 ", "Restart"]
        signout: ["\uf235  ", "Sign out"]
        hibernate: ["\uf28e  ", "Hibernate"]
        sleep: ["\u23fe", "Sleep"]
        cancel: ["", "Cancel"]
  active_window:
    type: "yasb.active_window.ActiveWindowWidget"
    options:
      label: "{win[title]}"
      label_alt: "{win[title]}"
      label_no_window: ""
      label_icon: true
      label_icon_size: 14
      max_length: 21
      max_length_ellipsis: ".."
      monitor_exclusive: false
  battery:
    type: "yasb.battery.BatteryWidget"
    options:
      label: "{icon} {percent}%"
      label_alt: "{icon} time: {time_remaining}"
      charging_options:
        icon_format: "{charging_icon}"
      status_icons:
        icon_charging: "\udb80\udc84"
        icon_critical: "\udb80\udc7a"
        icon_low: "\udb80\udc7b"
        icon_medium: "\udb80\udc7e"
        icon_high: "\udb80\udc80"
        icon_full: "\udb80\udc79"
      status_thresholds:
        critical: 10
        low: 45
        medium: 75
        high: 85
        full: 100
      container_padding:
        top: 2
        left: 0
        right: 0
        bottom: 0
