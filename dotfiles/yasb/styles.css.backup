/* -------------------------------------------------------------------------------------------------- */
/* Variables                                                                                         */
/* -------------------------------------------------------------------------------------------------- */

:root {
	--rosewater: rgb(245, 224, 220);
	--flamingo: rgb(242, 205, 205);
	--pink: rgb(245, 194, 231);
	--mauve: rgb(203, 166, 247);
	--red: rgb(243, 139, 168);
	--maroon: rgb(235, 160, 172);
	--peach: rgb(250, 179, 135);
	--yellow: rgb(249, 226, 175);
	--green: rgb(166, 227, 161);
	--teal: rgb(148, 226, 213);
	--sky: rgb(137, 220, 235);
	--sapphire: rgb(116, 199, 236);
	--blue: rgb(137, 180, 250);
	--lavender: rgb(180, 190, 254);
	--text: rgb(205, 214, 244);
	--subtext1: rgb(186, 194, 222);
	--subtext0: rgb(166, 173, 200);
	--overlay2: rgb(147, 153, 178);
	--overlay1: rgb(127, 132, 156);
	--overlay0: rgb(108, 112, 134);
	--surface2: rgb(88, 91, 112);
	--surface1: rgb(69, 71, 90);
	--surface0: rgb(40, 41, 54);
	--base: rgb(30, 30, 46);
	--mantle: rgb(24, 24, 37);
	--crust: rgb(17, 17, 27);
}

/* -------------------------------------------------------------------------------------------------- */
/* 1. Layout and Containers                                                                           */
/* -------------------------------------------------------------------------------------------------- */

* {
	font-size: 12px;
	color: #ffffff;
	font-weight: 500;
	font-family: "Ebrima", "Ebrima";
	margin: 0px;
	padding: 0;
}
.yasb-bar {
	padding: 0 11px;
	margin: 0;
	background-color: rgba(0, 0, 0, 0.288);
	border-radius: 0px;
}

.widget {
	padding: 0 5px;
	margin: 0;
}

.widget .label {
	padding: 2px 2px 1px 2px;

}

.widget .label.alt {
	padding: 1px 8px 1px 8px;
}

/* -------------------------------------------------------------------------------------------------- */
/* 2. Widget Containers                                                                               */
/* -------------------------------------------------------------------------------------------------- */

.glazewm-workspaces .widget-container {
	background-color: var(--mantle);
	margin: 4px 0px 4px 0px;
	border-radius: 8px;
}

/* -------------------------------------------------------------------------------------------------- */
/* 3. Widgets                                                                                         */
/* -------------------------------------------------------------------------------------------------- */

/***-------------------------------      • Windows Desktops •      --------------------------------***/

.glazewm-workspaces {
	margin: 0;
}

.glazewm-workspaces .ws-btn {
	background-color: var(--surface1);
	width: 10px;
	height: 10px;
	border-radius: 4px;
	color: rgba(0, 0, 0, 0);
	margin-right: 5px;
	margin-left: 5px;
}

.glazewm-workspaces .ws-btn.active_populated,
.glazewm-workspaces .ws-btn.active_empty {
	color: rgba(0, 0, 0, 0);
	background-color: var(--mauve);
	margin-right: 5px;
	margin-left: 5px;
	width: 28px;
	height: 10px;
}

.glazewm-workspaces .ws-btn.populated {
	color: var(--surface1);
}

.glazewm-workspaces .ws-btn.empty {
	color: #7D8B9D;
}

.glazewm-workspaces .ws-btn:hover,
.glazewm-workspaces .ws-btn.populated:hover,
.glazewm-workspaces .ws-btn.empty:hover {
	background-color: var(--surface2);
}

.komorebi-active-layout {
    padding: 0 -4px 0 0;
}
.komorebi-active-layout .label {
    font-weight: 600;
    padding: 2px 0 0 0;
}

.komorebi-workspaces .widget-container {
  background-color: transparent;
  border-radius: 10%;
}

.komorebi-workspaces .ws-btn {
    border: none;
    color: #ffffff ;
    margin: 0 1px 0 0px;
    height: 30px;
    width: 20px;
    padding: 0 3px;
  border-radius: 10%;
}

.komorebi-workspaces .ws-btn.populated {
    color: #FFFFFF;
    font-weight: 500;
  border-radius: 10%;
}

.komorebi-workspaces .ws-btn.active {
    color:#FFFFFF;
    font-weight: 500;
  border-radius: 10%;
}

.komorebi-workspaces .widget-container .ws-btn.active {
  background-color: rgba(0, 0, 0, 0.397);
  height: 30px;
  
}

/***---------------------------------      • Audio Widget •      ----------------------------------***/

.audio-menu {
	background-color: var(--mantle);
}
.audio-container .device {
	background-color: var(--base);
	border: none;
	padding: 6px 8px 6px 4px;
	margin: 2px 0;
	font-size: 12px;
	border-radius: 4px;
	font-family: "SF Pro Text";
}
.audio-container .device.selected {
	background-color: var(--crust);
} 
.audio-container .device:hover {
	background-color: var(--base);
}

.volume-slider::groove {
	color: transparent;
}
.volume-slider::handle {
	background-color: transparent;
}
.audio-menu {
	background-color: rgba(17, 17, 27, 0.4);
}

/***------------------------------      • Notification Widget •      -------------------------------***/

.notification-widget {
	padding: 0 4px 0 4px;
}

.notification-widget .icon {
	font-size: 12px;
	padding-right: 5px;
	padding-left: 2px;
}
.notification-widget .icon.new-notification {
	color: var(--mauve);
}
.notification-widget .label.new-notification {
	color: var(--mauve);
}

/***-------------------------------      • Power Menu Widget •      --------------------------------***/

.power-menu-widget .label {
    color: #ffffff;
    font-size: 13px;
}
.power-menu-popup {
    background-color: transparent
}
.power-menu-popup .button {
    padding: 0;
    width: 180px;
    height: 230px;
    border-radius: 8px;
    background-color: rgba(0, 0, 0, 0.2);
    color: var(--text);
    margin: 0px;
}
.power-menu-popup .button.hover {
    background-color: rgba(255, 255, 255, 0.1);
}

.power-menu-popup .button .label {
    margin-bottom: 8px;
    font-size: 16px;
    font-weight: 500;
    color: #ffffff;
}
.power-menu-popup .button .icon {
    font-size: 64px;
    padding-top: 32px;
    color: #ffffff
}

.power-menu-popup .button.cancel .icon {
    padding: 0;
    margin: 0;
}
.power-menu-popup .button.cancel .label {
    color: #ffffff;
    margin: 0;
}
.power-menu-popup .button.cancel {
    height: 32px;
    border-radius: 4px;
}

.clock-widget {
	padding: 0 4px 0 4px;
}

/* --------------------------------------------------------------------------------------------------- */
/* 6. Icons & Typography                                                                               */
/* --------------------------------------------------------------------------------------------------- */

.icon {
	font-size: 16px;
}
.volume-widget .icon {
	color: #ffffff;
	margin: 1px 2px 0 0;
}
.start-menu .icon {
	font-size: 18px;
	color: #89b4fa
}
.clock-widget .icon {
	color: #cba6f7;
	font-size: 14px;
	margin-right: 7px;
}

/***---------------------------------      • Weather Icons •      ----------------------------------***/

.weather-widget .icon.cloudyDay {
	color: var(--mauve);
}
.weather-widget .icon.cloudyNight {
	color: var(--mauve);
}
.weather-widget .icon.rainyDay {
	color: var(--mauve);
}
.weather-widget .icon.rainyNight {
	color: var(--mauve);
}
.weather-widget .icon.snowyIcyDay {
	color: var(--mauve);
}
.weather-widget .icon.snowyIcyNight {
	color: var(--mauve);
}
.weather-widget .icon.blizzardDay {
	color: var(--mauve);
}
.weather-widget .icon.default {
	color: var(--mauve);
}

/***----------------------------------      • Weather Card •      -----------------------------------***/

.weather-card {
	background-color: rgba(255, 255, 255, 0);
}
.weather-card-today {
	border-radius: 8px;
	background-color: rgba(255, 255, 255, 0);
	color: var(--text);
}
.weather-card-today .label {
	font-size: 12px;
	font-family: "SF Pro Rounded";
}
.weather-card-today .label.location {
	font-size: 24px;
	font-weight: 800;
	font-family: "SF Pro Rounded";
}
.weather-card-today .label.alert {
	font-size: 12px;
	font-weight: 700;
	background-color: rgba(255, 255, 255, 0);
	border: 1px solid rgba(247, 209, 42, 0.1);
	color: rgba(196, 181, 162, 0.85);
	border-radius: 6px;
	padding: 5px 0;
}
.weather-card-day {
	border-radius: 8px;
	background-color: rgba(255, 255, 255, 0.05);
}
.weather-card-day .label {
	font-size: 12px;
	font-family: "SF Pro Rounded";
}

/* Media Widget */

.media-widget {
	padding: 0;
	margin-left: 0;
}
.media-widget .label {
	color: #ffffff;
    padding-left: 5px;
}

.media-menu {
    min-width: 350px;
    max-width: 350px;
    background: rgba(255, 255, 255, 0.1);
    border-top: 1px solid rgba(255, 255, 255, 50);
    border-bottom: 1px solid rgba(0, 0, 0, 80);
}
.media-menu .thumbnail {
    border-radius: 7px;
    border: 1px solid rgba(0, 0, 0, 80);
}
.media-menu .title,
.media-menu .artist,
.media-menu .source {
    font-size: 20px;
    margin-left: 12px;
    margin-top: 15px;
    margin-bottom: 0px;
    color: white;
}
.media-menu .artist {
	    margin-left: 15px;
    font-size: 12px;
    color: var(--subtle);
    margin-top: 0;
    margin-bottom: 28px;
}
.media-menu .source {
   visibility: hidden;
   color: rgba(0, 0, 0, 0);
}
.media-menu .btn.prev {
    margin-left: 15px;
}
.media-menu .btn {
    font-size: 22px;
    min-width: 35px;
    max-width: 35px;
    max-height: 35px;
    min-height: 35px;
    margin-right: 5px;
    border-radius: 18px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px;
    color: var(--text);
}

.media-menu .btn.play {
    background-color: rgba(255, 255, 255, 0.0);
    font-size: 20px
}
.media-menu .btn.disabled:hover,
.media-menu .btn.disabled {
    color: var(--muted);
	border-radius: 20px;
    background-color: rgba(0, 0, 0, 0);
}
.media-menu .playback-time {
    font-size: 12px;
    color: var(--subtle);
    margin-top: 15px;
    min-width: 100px;
}
.media-menu .progress-slider {
    height: 12px;
    margin: 5px 2px;
    background: rgba(0, 0, 0, 0);
    border-radius: 3px;
}
.media-menu .progress-slider::groove {
    border-radius: 999px;
    height: 10px;
    background: rgba(255, 255, 255, 0.1);
}
.media-menu .progress-slider::groove:hover {
    border-radius: 3px;
    height: 12px;
    background: rgba(255, 255, 255, 0.2);
}
.media-menu .progress-slider::sub-page {
    border-radius: 999px;
    background: white;
    height: 10px;
}

/* Hide media widget buttons */

.media-widget .btn {
	max-width: 0;
}

.calendar {
    background-color: rgba(17, 17, 27, 0.1);
}
.calendar .calendar-table,
.calendar .calendar-table::item {
    background-color: rgba(17, 17, 27, 0);
    color: rgba(162, 177, 196, 0.85);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    border: none;
    outline: none;  
}
.calendar .calendar-table::item:selected {
    color: rgb(255, 255, 255);
}
.calendar .day-label {
    margin-top: 20px;
}
.calendar .day-label,
.calendar .month-label,
.calendar .date-label {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 16px;
    color: #ffffff;
    font-weight: 700;
    min-width: 180px;
    max-width: 180px;
}
.calendar .month-label {
    font-weight: normal;
}
.calendar .date-label {
    font-size: 88px;
    font-weight: 900;
    color: rgb(255, 255, 255);
    margin-top: -20px;
}

